package br.com.lkf;

public class Carro {
	
	// Atributos - características
	private String cor;
	private String marca;
	private String modelo;
	private String cambio; // Automático ou manual
	
	// Construtor
	public Carro(String cor, String marca, String modelo) {
		this.cor = cor;
		this.marca = marca;
		this.modelo = modelo;
		this.cambio = "Manual";
	}
	
	// Sobrecarga de métodos
	public Carro(String cor, String marca, String modelo, String cambio) {
		this.cor = cor;
		this.marca = marca;
		this.modelo = modelo;
		if (cambio == true) this.cambio = "Manual"
	}
	
	// Métodos - ações
	public void andar() {
		System.out.println("Andando...");
	}
	
	public void parar() {
		System.out.println("Parado!");
	}

}
